# Backend Production Environment Configuration
# Version: 5.1.0 - May 12, 2025

# Server Configuration
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# Database Configuration
DB_TYPE=sqlite
DB_PATH=iot_database.sqlite

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=iotedge
MQTT_PASSWORD=your_secure_password_here

# Security
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=24h

# Logging
LOG_LEVEL=info
LOG_FILE=logs/api/app.log

# API Configuration
API_PREFIX=/api
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
