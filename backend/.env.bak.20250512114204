# Backend Production Environment Configuration
# Version: 5.1.0 - May 10, 2025

# Server Configuration
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# Database Configuration
DB_TYPE=sqlite
DB_PATH=iot_database.sqlite

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=iotedge
MQTT_PASSWORD=your_secure_password_here

# Security
JWT_SECRET=your_jwt_secret_here
